<table class="table">
		<tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>



				<tr>
					<th>name</th>
					<th><%= user.name %></th>
				</tr>

				<tr>
					<th>introduction</th>
					<th><%= user.introduction %></th>
				</tr>

				<tr>
					<th>follows</th>
					<th><%= link_to following_user_path(user.id) do %>
					<%= user.followings.count %>
					<% end %>
					</th>
				</tr>

				<tr>
					<th>followers</th>
					<th><%= link_to followers_user_path(user.id) do %>
						<%= user.followers.count %>
						<% end %>
					</th>
				</tr>

				<tr>
					  <% unless current_user == user %>
							<% if current_user.following?(user) %>

								<th><%= link_to "フォローを外す", user_relationships_path(user), method: :delete, class: "btn btn-success" %></th>

							<% else %>
								<th><%= link_to "フォローする", user_relationships_path(user), method: :post, class: "btn btn-success" %></th>
						　<% end %>
					  <% end %>

		</tr>
</table>

<div class="row">
	<%= link_to '',edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
</div>
